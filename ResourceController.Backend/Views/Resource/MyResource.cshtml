
@{
    ViewBag.Title = "MyResource";
}

<h2>MyResource</h2>

<div class="progress">
    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
        50%
    </div>
</div>
<div class="progress">
    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
        <span class="sr-only">60% Complete (warning)</span>
    </div>
</div>
<div class="progress">
    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
        <span class="sr-only">80% Complete (danger)</span>
    </div>
</div>

<input type="button" class="btn btn-primary" value="Refresh" onclick="updateStatus()">

<script type="text/javascript">
    function updateStatus() {
        $.ajax({
            url: "/Home/Contact",
            type: "GET",
            cache: false,
            dataType: "json",
        });
    }
</script>